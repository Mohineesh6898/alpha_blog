<div class="container">
<%if @article.errors.any?%>
    <ul>
    <%@article.errors.full_messages.each do |message|%>
        <li><%= message%></li>
    <%end%>
    </ul>
<%end%>        

<div class="row justify-content-center">
    <div class="col-10">
        <%=form_with(model:@article,class:"bg-info shadow p-3 mb-3",local: true) do |f| %>
            <div class="form-group row">
                <%=f.label :title,class:"col-2 col-form-label"%>
                <div class="col-10">
                    <%=f.text_field :title,class:"form-control shadow",placeholder:"Title"%>
                </div>
            </div>
            <div class="form-group row">
                <%=f.label :description,class:"col-2 col-form-label"%>
                <div class="col-10">
                    <%=f.text_area :description,rows:10, class:"form-control shadow"%>
                </div>
            </div>   
            <div class="form-group row justify-content-center">
                <%=f.submit class:"btn btn-outline-success"%><br/>
            </div>
        <%end%>  
      <%=link_to "Return to index", articles_path,class:"text-info" %>
    </div> 
</div>      