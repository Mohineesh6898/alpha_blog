<div class="container"> 
<%if @user.errors.any?%>
<%=@user.class.name.downcase%>
<ul>

    <% @user.errors.full_messages.each do |error|%>
        <li><%=error%></li>
    <%end%>    
 </ul>   
<%end%>      
<div class="row justify-content-center">
    <div class="col-10">
        <%=form_with(model:@user,class:"bg-info shadow p-3 mb-3",local: true) do |f| %>
            <div class="form-group row">
                <%=f.label :username,class:"col-2 col-form-label"%>
                <div class="col-10">
                    <%=f.text_field :username,class:"form-control shadow",placeholder:"username"%>
                </div>
            </div>
            <div class="form-group row">
                <%=f.label :email,class:"col-2 col-form-label"%>
                <div class="col-10">
                    <%=f.email_field :email,rows:10, class:"form-control shadow",placeholder:"Valid Email"%>
                </div>
            </div>  
            <div class="form-group row">
                <%=f.label :password,class:"col-2 col-form-label"%>
                <div class="col-10">
                    <%=f.password_field :password,rows:10, class:"form-control shadow",placeholder:"Create Password"%>
                </div>
            </div>   
            <div class="form-group row justify-content-center">
                <%=f.submit(@user.new_record? ? "signup": "update account",class:"btn btn-outline-success")%><br/>
            </div>
        <%end%>  
      <%=link_to "Return to index", articles_path,class:"text-info" %>
    </div> 
</div>      